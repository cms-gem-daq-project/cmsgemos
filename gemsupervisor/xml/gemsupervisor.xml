	<rcmsStateListener xsi:type="soapenc:Struct">
          <classname xsi:type="xsd:string">RCMSStateListener</classname>
          <instance  xsi:type="xsd:unsignedInt">0</instance>
        </rcmsStateListener>
      </properties>
