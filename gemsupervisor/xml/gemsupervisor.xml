	<AllGLIBsInfo xsi:type="soapenc:Array"  soapenc:arrayType="xsd:ur-type[12]">
          <GLIBInfo   xsi:type="soapenc:Struct" soapenc:position="3"> <!--  position must be slot-1  -->
